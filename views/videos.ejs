<!DOCTYPE html>
<html lang="fr">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Le Rugby à Jojo !</title>
  <link rel="stylesheet" href="main.css" />
  <link rel="stylesheet" href="video.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
</head>

<body class="min-h-screen bg-background">
  <!-- Navigation Header -->
  <nav class="bg-surface shadow-subtle border-b border-border-light sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <!-- Logo -->
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-10 w-10 text-primary" viewBox="0 0 40 40" fill="currentColor">
              <circle cx="20" cy="20" r="18" fill="none" stroke="currentColor" stroke-width="2" />
              <ellipse cx="20" cy="20" rx="12" ry="8" fill="none" stroke="currentColor" stroke-width="1.5" />
              <path d="M8 20 L32 20" stroke="currentColor" stroke-width="1" />
              <circle cx="20" cy="20" r="3" fill="currentColor" />
            </svg>
          </div>
          <div class="ml-3">
            <h1 class="text-xl font-bold text-primary font-accent">Rugby à Jojo</h1>
            <p class="text-xs text-text-secondary">Bienvenue <%= email %>
            </p>
          </div>
        </div>

        <!-- Navigation Links -->
        <div class="hidden md:block">
          <div class="ml-10 flex items-baseline space-x-4">
            <a href="/admin/videos"
              class="text-primary font-semibold px-3 py-2 rounded-md text-sm bg-primary-50">Vidéos</a>
            <a href="/admin/users"
              class="text-text-secondary hover:text-primary transition-smooth px-3 py-2 rounded-md text-sm">Gestion
              des utilisateurs</a>
            <a href="/admin/videos"
              class="text-text-secondary hover:text-primary transition-smooth px-3 py-2 rounded-md text-sm">Gestion des
              vidéos</a>
          </div>
        </div>

        <!-- Admin Profile & Logout -->
        <div class="flex items-center space-x-4">
          <div class="hidden md:flex items-center space-x-2">
            <div class="w-8 h-8 bg-primary rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd"
                  d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-6-3a2 2 0 11-4 0 2 2 0 014 0zm-2 4a5 5 0 00-4.546 2.916A5.986 5.986 0 0010 16a5.986 5.986 0 004.546-2.084A5 5 0 0010 11z"
                  clip-rule="evenodd" />
              </svg>
            </div>
            <div class="text-sm">
              <p class="font-semibold text-primary">
                <%= email %>
              </p>
            </div>
          </div>
          <a href="/logout"><svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
            </svg></a>

          <!-- Mobile menu button -->
          <div class="md:hidden">
            <button type="button"
              class="text-text-secondary hover:text-primary focus:outline-none focus:text-primary transition-smooth">
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>
  </nav>

  <!-- Header -->
  <div class="text-center mb-8">
    <h1 class="text-3xl font-bold text-primary font-accent mb-4">Terrain de Rugby</h1>
    <p class="text-lg text-text-secondary">Visualisation des vidéos par zone</p>
    <div class="mt-4 px-4 py-2 bg-green-50 border border-green-200 rounded-lg inline-flex items-center">
      <svg class="w-5 h-5 text-green-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
      </svg>
      <span class="text-sm text-green-700 font-medium">Vidéos protégées - Visionnage uniquement</span>
    </div>
  </div>
  <!-- Rugby Field Container -->
  <div class="relative bg-surface rounded-xl shadow-rugby border border-border-light p-8 mb-8">
    <table border="1">
      <tr>
        <td valign="top" class="gauche_en-but">
          <div class="titrezone">En but gauche</div><br>
          <% videosByZone["gauche_en-but"].forEach(function(v){ %>
            <div>
              <p><b>
                  <%= v.titre %>
                </b><br>
                <%= v.commentaire %>
              </p>
              <video src="<%= v.url %>" width="200" controls controlsList="nodownload"></video>
            </div>
            <hr>
            <% }) %>
        </td>
        <td valign="top" class="gauche_22m">
          <div class="titrezone">22m gauche</div><br>
          <% videosByZone["gauche_22m"].forEach(function(v){ %>
            <div>
              <p><b>
                  <%= v.titre %>
                </b><br>
                <%= v.commentaire %>
              </p>
              <video src="<%= v.url %>" width="200" controls controlsList="nodownload"></video>
            </div>
            <hr>
            <% }) %>
        </td>
        <td valign="top" class="gauche_40m">
          <div class="titrezone">40m gauche</div><br>
          <% videosByZone["gauche_40m"].forEach(function(v){ %>
            <div>
              <p><b>
                  <%= v.titre %>
                </b><br>
                <%= v.commentaire %>
              </p>
              <video src="<%= v.url %>" width="200" controls controlsList="nodownload"></video>
            </div>
            <hr>
            <% }) %>
        </td>
        <td valign="top" class="centre_50m">
          <div class="titrezone">50m</div><br>
          <% videosByZone["centre_50m"].forEach(function(v){ %>
            <div>
              <p><b>
                  <%= v.titre %>
                </b><br>
                <%= v.commentaire %>
              </p>
              <video src="<%= v.url %>" width="200" controls controlsList="nodownload"></video>
            </div>
            <hr>
            <% }) %>
        </td>
        <td valign="top" class="droit_40m">
          <div class="titrezone">40m droit</div><br>
          <% videosByZone["droit_40m"].forEach(function(v){ %>
            <div>
              <p><b>
                  <%= v.titre %>
                </b><br>
                <%= v.commentaire %>
              </p>
              <video src="<%= v.url %>" width="200" controls controlsList="nodownload"></video>
            </div>
            <hr>
            <% }) %>
        </td>
        <td valign="top" class="droit_22m">
          <div class="titrezone">22m droit</div><br>
          <% videosByZone["droit_22m"].forEach(function(v){ %>
            <div>
              <p><b>
                  <%= v.titre %>
                </b><br>
                <%= v.commentaire %>
              </p>
              <video src="<%= v.url %>" width="200" controls controlsList="nodownload"></video>
            </div>
            <hr>
            <% }) %>
        </td>
        <td valign="top" class="droit_en-but">
          <div class="titrezone">En but droit</div><br>
          <% videosByZone["droit_en-but"].forEach(function(v){ %>
            <div>
              <p><b>
                  <%= v.titre %>
                </b><br>
                <%= v.commentaire %>
              </p>
              <video src="<%= v.url %>" width="200" controls controlsList="nodownload"></video>
            </div>
            <hr>
            <% }) %>
        </td>

      </tr>
    </table>
  </div>
  <script>
    document.querySelectorAll('video').forEach(function (v) {
      v.addEventListener('contextmenu', function (e) {
        e.preventDefault();
      });
    });
  </script>
</body>

</html>