<!DOCTYPE html>
<html lang="fr">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Le Rugby à Jojo !</title>
  <link rel="stylesheet" href="/main.css" />
  <link rel="stylesheet" href="/users.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
</head>

<body class="min-h-screen bg-background">
  <!-- Navigation Header -->
  <nav class="bg-surface shadow-subtle border-b border-border-light sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <!-- Logo -->
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-10 w-10 text-primary" viewBox="0 0 40 40" fill="currentColor">
              <circle cx="20" cy="20" r="18" fill="none" stroke="currentColor" stroke-width="2" />
              <ellipse cx="20" cy="20" rx="12" ry="8" fill="none" stroke="currentColor" stroke-width="1.5" />
              <path d="M8 20 L32 20" stroke="currentColor" stroke-width="1" />
              <circle cx="20" cy="20" r="3" fill="currentColor" />
            </svg>
          </div>
          <div class="ml-3">
            <h1 class="text-xl font-bold text-primary font-accent">Rugby à Jojo</h1>
            <p class="text-xs text-text-secondary">Bienvenue
            </p>
          </div>
        </div>

        <!-- Navigation Links -->
        <div class="hidden md:block">
          <div class="ml-10 flex items-baseline space-x-4">
            <a href="/videos"
              class="text-text-secondary hover:text-primary transition-smooth px-3 py-2 rounded-md text-sm">Vidéos</a>
            <a href="/admin/users" class="text-primary font-semibold px-3 py-2 rounded-md text-sm bg-primary-50">Gestion
              des utilisateurs</a>
            <a href="/admin/videos"
              class="text-text-secondary hover:text-primary transition-smooth px-3 py-2 rounded-md text-sm">Gestion des
              vidéos</a>
          </div>
        </div>

        <!-- Admin Profile & Logout -->
        <div class="flex items-center space-x-4">
          <div class="hidden md:flex items-center space-x-2">
            <div class="w-8 h-8 bg-primary rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd"
                  d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-6-3a2 2 0 11-4 0 2 2 0 014 0zm-2 4a5 5 0 00-4.546 2.916A5.986 5.986 0 0010 16a5.986 5.986 0 004.546-2.084A5 5 0 0010 11z"
                  clip-rule="evenodd" />
              </svg>
            </div>
            <div class="text-sm">
              <p class="font-semibold text-primary">

              </p>
            </div>
          </div>
          <a href="/logout"><svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
            </svg></a>
        </div>
      </div>
    </div>
  </nav>
  <!-- Header -->
  <div class="text-center mb-8">
    <h1 class="text-3xl font-bold text-primary font-accent mb-4">Gestion des utilisateurs</h1>
  </div>

  <!-- Main Content -->
  <div class="overflow-y-auto usertab2">
    <!-- Application Card 1 -->
    <div class="border border-border-light rounded-lg p-4 hover:shadow-rugby transition-all duration-300 usertab">
      <% users.forEach(function(u){ %>
        <div class="flex items-start justify-between padding-bottom: 10px; border-bottom: 1px solid #e0e0e0; mb-4 pb-4">
          <div class="flex items-start space-x-4">
            <div class="flex-1">
              <h3 class="font-semibold text-primary">
                <%= u.email %>
              </h3>
              <div class="flex items-center space-x-4 mt-2">
                <span class="text-xs bg-primary-100 text-primary px-2 py-1 rounded-full">
                  <%= u.role %>
                </span>
                <span class="text-xs text-text-secondary">
                  <%= u.statut %>
                </span>
              </div>
            </div>
          </div>
          <div class="flex items-center space-x-2">
            <form method="POST" action="/admin/user/toggle" style="display:inline">
              <input type="hidden" name="email" value="<%= u.email %>">
              <button type="submit" class="btn-primary text-sm px-4 py-2">
                <%= u.statut==='actif' ? 'Désactiver' : 'Activer' %>
              </button>
            </form>
          </div>
          <form method="POST" action="/admin/user/delete" style="display:inline">
            <input type="hidden" name="email" value="<%= u.email %>">
            <button type="submit">Supprimer</button>
          </form>
        </div>
        <% }) %>
    </div>
  </div>
</body>

</html>